
<%- include('../includes/head.ejs') %>
<link rel="stylesheet" href="/css/shop.css">
</head>
<body>
<%- include('../includes/navigation.ejs') %>
    <main>
        <% if(prods.length>0){ %>
            <h1>Here is your admin-products</h1>
            <div class='row'>
            <% prods.forEach((nameproduct)=>{ %>
           <div class='col-lg-3 col-md-4 col-sm-6'>
             <div class='card'>
                <div class='card-body'>
                  <h2 class='card-header'><%= nameproduct.title %></h2>
                  <img style="width:30%;" src="<%= nameproduct.imageURL%>" class="card-img-top" alt="A Book">
                   <h1>$<%= nameproduct.price %></h1>
                   <p><%= nameproduct.discription %></p>
                   <a href="/admin/edit-products/<%=nameproduct.id%>?edit=true" class="btn btn-primary">Edit</a>
                   <form action="/admin/delete-product" method="POST">
                     <input type="hidden" value="<%=nameproduct.id%>" name="deleteID">
                     <button type='submit' class='btn btn-primary'>Delete</button>
                   </form>
               </div>
            </div>
            </div>
            <% }) %>
          </div>
          <% } else{ %>
            <h1>No Products Found!</h1>
            <% } %>
    </main>

<%- include('../includes/end.ejs') %>  


<%- include('../includes/end.ejs') %>